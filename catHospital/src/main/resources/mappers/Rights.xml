<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.renkaen.cat_hospital.mapper.RightsMapper">
    
    <!--根据权限id获取权限信息-->
    <select id="selectRightsById" resultType="com.renkaen.cat_hospital.bean.DO.Rights">
        select *
        from rights_table
        where id = #{id};
    </select>

    <update id="updateRightsById" parameterType="com.renkaen.cat_hospital.bean.DO.Rights">
        update rights_table
        set rights = ifnull(#{r.rights},rights)
        where id = #{id}
    </update>

</mapper>