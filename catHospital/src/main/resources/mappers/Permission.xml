<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.renkaen.cat_hospital.mapper.PermissionMapper">

    <select id="selectPermissionByRolesId" resultType="com.renkaen.cat_hospital.bean.DO.Permission">
        SELECT pt.*
        FROM permission_table pt ,role_permission rp
        WHERE rp.roles_id = #{rolesId} AND rp.permission_id = pt.permission_id
    </select>

</mapper>