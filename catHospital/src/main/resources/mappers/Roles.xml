<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.renkaen.cat_hospital.mapper.RolesMapper">

    <resultMap id="rolesAndRights" type="com.renkaen.cat_hospital.bean.DTO.RolesJoinRightsDTO" autoMapping="true">
        <association property="rights" javaType="com.renkaen.cat_hospital.bean.DO.Rights" autoMapping="true"/>
    </resultMap>
    <select id="selectAllRolesJoinRights" resultMap="rolesAndRights">
        select *
        from roles_table roles left join rights_table rights on rights.id=roles.rightsId
    </select>

    <select id="selectByStaffId" resultType="com.renkaen.cat_hospital.bean.DO.Roles">
        select r.*
        from roles_table r , staff_role sr
        where sr.staffId = #{staffId} and r.Id = sr.roleId
    </select>

    <!--根据权限id获取权限信息-->
    <select id="selectById" resultType="com.renkaen.cat_hospital.bean.DO.Roles">
        select *
        from roles_table
        where id = #{id};
    </select>

    <select id="selectAll" resultType="com.renkaen.cat_hospital.bean.DO.Roles">
        select *
        from roles_table
    </select>




</mapper>