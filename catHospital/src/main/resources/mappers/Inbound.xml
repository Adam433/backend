<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.renkaen.cat_hospital.mapper.InboundMapper">

    <!--根据权限id获取权限信息-->
    <select id="selectUserById" resultType="com.renkaen.cat_hospital.bean.PO.Inbound">
        select *
        from inbound_table
        where id = #{id};
    </select>

    <insert id="insertInbound" useGeneratedKeys="true" keyProperty="id">
        insert into inbound_table (id,keyTime,amount,batchNumber,staff,purchasePrice,inStockId)
        values (default, #{keyTime}, #{amount}, #{batchNumber}, #{staff}, #{purchasePrice},#{inStockId})
    </insert>

    <delete id="deleteInboundById" >
        delete
        from inbound_table
        where id = #{id};
    </delete>

    <update id="updateInboundById" parameterType="com.renkaen.cat_hospital.bean.PO.Inbound">
        update inbound_table
        set keyTime = ifnull(#{inbound.keyTime}, keyTime ),
            amount = ifnull(#{inbound.amount}, amount ),
            batchNumber = ifnull(#{inbound.batchNumber}, batchNumber ),
            staff = ifnull(#{inbound.staff}, staff ),
            purchasePrice = ifnull(#{inbound.purchasePrice}, purchasePrice ),
            inStockId = ifnull(#{inbound.inStockId}, inStockId )
        where id = #{id}
    </update>

</mapper>